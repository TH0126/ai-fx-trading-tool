# ==============================================
# AI FX Trading Assistant - 環境変数設定
# ==============================================

# アプリケーション設定
VITE_APP_NAME=AI FX Trading Assistant
VITE_APP_VERSION=0.1.0
VITE_NODE_ENV=development

# API設定
VITE_API_BASE_URL=http://localhost:8000/api
VITE_AI_API_BASE_URL=http://localhost:8001
VITE_WEBSOCKET_URL=http://localhost:8000

# 外部API設定（FXデータプロバイダー）
VITE_ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
VITE_ALPHA_VANTAGE_BASE_URL=https://www.alphavantage.co/query

# ForexAPI（バックアップ）
VITE_FOREX_API_KEY=your_forex_api_key_here
VITE_FOREX_API_BASE_URL=https://api.forex.com/v1

# NewsAPI設定
VITE_NEWS_API_KEY=your_news_api_key_here
VITE_NEWS_API_BASE_URL=https://newsapi.org/v2

# 経済指標API
VITE_ECONOMIC_CALENDAR_API_KEY=your_economic_calendar_api_key_here
VITE_ECONOMIC_CALENDAR_BASE_URL=https://api.example.com/economic

# チャート設定
VITE_MAX_CANDLES=5000
VITE_DEFAULT_TIMEFRAME=1h
VITE_DEFAULT_SYMBOL=USD/JPY

# WebSocket設定
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_INTERVAL=3000

# AI分析設定
VITE_AI_CONFIDENCE_THRESHOLD=0.6
VITE_AI_MAX_PREDICTIONS=10

# キャッシュ設定
VITE_CACHE_DURATION=300000
VITE_CACHE_MAX_SIZE=100

# デバッグ設定
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=info

# ==============================================
# 本番環境では以下の設定を適切に変更してください
# ==============================================

